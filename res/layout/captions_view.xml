<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<Space
	    android:layout_width="1dp"
	    android:layout_height="20dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/label_ultrasons"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Ultrasons"
            android:layout_marginLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
			
        <Space
            android:layout_width="30dp"
        	android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ultrason_value_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/ultrason_value_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge" />

		</LinearLayout>

	</LinearLayout>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal" >

		<TextView
		    android:id="@+id/label_inductifs"
		    android:layout_width="150dp"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="5dp"
		    android:text="Inductifs"
		    android:textAppearance="?android:attr/textAppearanceLarge" />
    	
		<Space
            android:layout_width="30dp"
        	android:layout_height="1dp" />
		        
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical" >

	        <TextView
	            android:id="@+id/inductif_value_0"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="0"
	            android:textAppearance="?android:attr/textAppearanceLarge" />

	        <TextView
	            android:id="@+id/inductif_value_1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="0"
	            android:textAppearance="?android:attr/textAppearanceLarge" />

	        <TextView
	            android:id="@+id/inductif_value_2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="0"
	            android:textAppearance="?android:attr/textAppearanceLarge" />

		</LinearLayout>

	</LinearLayout>

</LinearLayout>
